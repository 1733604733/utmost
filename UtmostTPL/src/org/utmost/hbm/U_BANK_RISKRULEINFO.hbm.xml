<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class entity-name="U_BANK_RISKRULEINFO" table="U_BANK_RISKRULEINFO">
		<id column="UUID" name="uuid" length="36" type="java.lang.String">
			<generator class="uuid" />
		</id>
		<property name="ruletplcode" type="java.lang.String">
			<column length="20" name="RULETPLCODE">
				<comment>该风险从哪条规则中继承</comment>
			</column>
		</property>
		<property name="rulecode" type="java.lang.String">
			<column length="20" name="RULECODE">
				<comment>预警编码</comment>
			</column>
		</property>
		<property name="rulename" type="java.lang.String">
			<column length="200" name="RULENAME">
				<comment>预警名称</comment>
			</column>
		</property>
		<property name="risklevel" type="java.lang.String">
			<column length="2" name="RISKLEVEL">
				<comment>预警级别</comment>
			</column>
		</property>
		<property name="risktype" type="java.lang.String">
			<column length="2" name="RISKTYPE">
				<comment>预警类型(实时－－00＼事后－－10)</comment>
			</column>
		</property>
		<property name="expression" type="java.lang.String">
			<column length="2048" name="EXPRESSION">
				<comment>规则表达示</comment>
			</column>
		</property>
		<property name="ruledesc" type="java.lang.String">
			<column length="256" name="RULEDESC">
				<comment>规则描述</comment>
			</column>
		</property>
		<property name="riskmode" type="java.lang.String">
			<column length="20" name="RISKMODE">
				<comment>预警方式</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>
